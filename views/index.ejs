<div class="joke-container">
    <h1>Rate the Joke! üòÇ</h1>
    <p class="subtitle">Read the joke and give it a rating from 1 to 5 stars!</p>

    <div id="joke-section" class="joke-section">
        <div class="loading">Loading joke...</div>
    </div>

    <div id="rating-section" class="rating-section" style="display: none;">
        <div class="star-rating">
            <span class="star" data-rating="1">‚òÜ</span>
            <span class="star" data-rating="2">‚òÜ</span>
            <span class="star" data-rating="3">‚òÜ</span>
            <span class="star" data-rating="4">‚òÜ</span>
            <span class="star" data-rating="5">‚òÜ</span>
        </div>
        <button id="next-joke" class="btn btn-primary" disabled>Select a Rating First</button>
    </div>

    <% if (topJokes && topJokes.length > 0) { %>
    <section class="top-jokes-section">
        <h2>üèÜ Top Rated Jokes üèÜ</h2>
        <div class="jokes-grid">
            <% topJokes.forEach((joke, index) => { %>
            <div class="top-joke" data-joke-id="<%= joke.jokeId %>">
                <div class="joke-rank">#<%= index + 1 %></div>
                <div class="joke-text"><%= joke.text %></div>
                <div class="joke-stats">
                    <span class="rating">‚≠ê <%= joke.averageRating %></span>
                    <span class="total-ratings">(<%= joke.totalRatings %> ratings)</span>
                </div>
            </div>
            <% }) %>
        </div>
    </section>
    <% } %>
</div>

<div id="toast-container"></div>

<style>
.joke-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
}

.joke-section {
    background: var(--card-background);
    border-radius: 15px;
    padding: 2rem;
    margin: 2rem 0;
    box-shadow: var(--shadow);
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.joke-display {
    text-align: center;
}

.joke-text {
    font-size: 1.4rem;
    line-height: 1.6;
    color: var(--text-primary);
    margin-bottom: 1rem;
}

.joke-category {
    display: inline-block;
    background: var(--primary-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    text-transform: capitalize;
}

.rating-section {
    text-align: center;
    margin: 2rem 0;
}

.star-rating {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
}

.star {
    font-size: 2.5rem;
    color: #ddd;
    cursor: pointer;
    transition: color 0.2s ease;
    user-select: none;
}

.star:hover,
.star.hover {
    color: #ffd700;
}

.star.selected {
    color: #ffd700;
}

.rating-result {
    background: var(--primary-gradient);
    color: white;
    padding: 1.5rem;
    border-radius: 10px;
    text-align: center;
    margin: 2rem 0;
}

.rating-result h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.3rem;
}

.top-jokes-section {
    margin-top: 3rem;
}

.jokes-grid {
    display: grid;
    gap: 1rem;
    margin-top: 1.5rem;
}

.top-joke {
    background: var(--card-background);
    border-radius: 10px;
    padding: 1.5rem;
    box-shadow: var(--shadow);
    display: flex;
    align-items: flex-start;
    gap: 1rem;
}

.joke-rank {
    background: var(--primary-color);
    color: white;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
}

.top-joke .joke-text {
    flex: 1;
    font-size: 1rem;
    margin-bottom: 0.5rem;
}

.joke-stats {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 1.1rem;
    color: var(--text-secondary);
}

.loading::after {
    content: '';
    width: 20px;
    height: 20px;
    border: 2px solid var(--primary-color);
    border-top: 2px solid transparent;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

@media (max-width: 768px) {
    .joke-container {
        padding: 1rem;
    }
    
    .joke-text {
        font-size: 1.2rem;
    }
    
    .star {
        font-size: 2rem;
    }
    
    .top-joke {
        flex-direction: column;
        text-align: center;
    }
}
</style>

<script src="/js/jokes.js"></script>
